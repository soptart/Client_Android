<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="260dp"
                android:layout_height="355dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_rv_item_home_today_artist_main_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic[16]" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/iv_rv_item_home_today_artist_main_product"
                android:layout_alignBottom="@+id/iv_rv_item_home_today_artist_main_product"
                android:background="@drawable/image_darker"></View>

            <TextView
                android:id="@+id/tv_rv_item_home_today_artist_main_university"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rv_item_home_today_artist_main_name"
                android:layout_marginLeft="14dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:includeFontPadding="false"
                android:text="땡땡대학교"
                android:textColor="#ffffff"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/tv_rv_item_home_today_artist_main_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="84dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:includeFontPadding="false"
                android:text="땡땡땡 작가"
                android:textColor="#ffffff"
                android:textSize="23sp" />

            <View
                android:id="@+id/line_rv_item_home_today_artist_main"
                android:layout_width="14dp"
                android:layout_height="1dp"
                android:layout_below="@id/tv_rv_item_home_today_artist_main_university"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="9dp"
                android:background="#ffffff" />

            <TextView
                android:id="@+id/tv_rv_item_home_today_artist_main_introduction"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_rv_item_home_today_artist_main"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_light"
                android:includeFontPadding="false"
                android:text="자기소개 롸롸로라"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="280dp"
                android:layout_marginRight="17dp"
                android:src="@drawable/today_next" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>