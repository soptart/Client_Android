<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.ThemeActivity">
    <LinearLayout
            android:id="@+id/ll_theme_main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="#55555555">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:paddingBottom="10dp">
            <TextView
                    android:id="@+id/txt_theme_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textColor="@color/colorMainBlack"
                    android:text="거실에 걸어두면 느낌 있어보이는 그림들"
                    android:breakStrategy="balanced"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"></View>
            <com.artoo.sopt23.artoo_client_android.CustomView.SquareImageView
                    android:id="@+id/img_theme_main"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" android:background="@drawable/ic_dashboard_black_24dp"/>
        </LinearLayout>
        <TextView
                android:id="@+id/txt_theme_desc"
                android:textColor="@color/colorMainGrey"
                android:text="허전했던 벽에 한번 걸어보자"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_theme_list"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>