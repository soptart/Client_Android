<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical"
    tools:context=".Activity.MypageMyInfoModifyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingBottom="15dp"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/txt_my_info_modify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="이름 변경"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_my_info_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="완료"
            android:textColor="#ff6f61"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/my_info_modify_edit_layout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#ffffff">

                <EditText
                    android:id="@+id/my_info_modify_edit_text_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="최윤정"
                    android:paddingLeft="20dp"
                    android:background="#ffffff"
                    android:textColorHint="#9c9c9c"
                    android:inputType="textNoSuggestions"/>

            </LinearLayout>


            <EditText
                android:id="@+id/my_info_modify_univ_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/my_info_modify_univ"
                android:hint="동덕여자"
                android:textColorHint="#9c9c9c"
                android:textSize="18sp"
                android:background="#ffffff"
                android:inputType="textNoSuggestions"
                android:layout_centerInParent="true"
                android:layout_marginRight="5dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/my_info_modify_univ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="20dp"
                android:text="대학교"
                android:textColor="#333333"
                android:textSize="18sp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/my_info_modify_account_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="18dp"
                android:background="@drawable/arrow_down_white"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:id="@+id/my_info_modify_view_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd" />


        <EditText
            android:id="@+id/my_info_modify_edit_text_2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ffffff"
            android:hint="최윤정"
            android:paddingLeft="20dp" />

        <View
            android:id="@+id/my_info_modify_view_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd" />

        <EditText
            android:id="@+id/my_info_modify_edit_text_3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ffffff"
            android:hint="최윤정"
            android:paddingLeft="20dp" />

        <View
            android:id="@+id/my_info_modify_view_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dddddd" />

    </LinearLayout>

</LinearLayout>