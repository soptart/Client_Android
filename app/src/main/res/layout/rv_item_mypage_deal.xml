<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp">

    <ImageView
            android:id="@+id/iv_mypage_deal_product_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:srcCompat="@color/colorEssential"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_marginLeft="12dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <TextView
                    android:id="@+id/tv_mypage_deal_product_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7살과 그녀"
                    android:textSize="14sp"
                    android:textColor="@color/colorMainBlack"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <TextView
                    android:id="@+id/tv_mypage_deal_left1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구매자: "
                    android:textSize="14sp"
                    android:textColor="@color/colorMainBlack"/>
            <TextView
                    android:id="@+id/tv_mypage_deal_product_buyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_mypage_deal_left1"
                    android:text="배선영"
                    android:textSize="14sp"
                    android:textColor="@color/colorMainBlack"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <TextView
                    android:id="@+id/tv_mypage_deal_left2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="판매가: "
                    android:textSize="14sp"
                    android:textColor="@color/colorMainBlack"/>
            <TextView
                    android:id="@+id/tv_mypage_deal_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_mypage_deal_left2"
                    android:text="120000원"
                    android:textSize="14sp"
                    android:textColor="@color/colorMainBlack"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <TextView
                    android:id="@+id/tv_mypage_deal_writetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018.10.10"
                    android:textSize="14sp"
                    android:textColor="@color/colorMainGrey"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <ImageView
                android:id="@+id/iv_mypage_deal_status"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="9dp"
                tools:srcCompat="@color/colorEssential"/>
    </RelativeLayout>
</LinearLayout>