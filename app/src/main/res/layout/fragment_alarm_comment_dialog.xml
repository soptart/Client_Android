<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".Fragment.AlarmCommentDialogFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="후기 작성"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:textSize="22sp"
        android:textColor="#333333"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="19dp"/>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <View
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/dialog_oval"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작품을 잘 받으셨나요?"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:textSize="16sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textColor="#333333"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작품에 대한 후기를 작성해주세요!"
        android:includeFontPadding="false"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:layout_marginRight="51dp"
        android:textSize="16sp"
        android:layout_marginLeft="30dp"
        android:textColor="#333333"/>
    <EditText
        android:id="@+id/et_fragment_alarm_comment_dialog"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:hint = "최대 30자로 작성해주세요"
        android:includeFontPadding="false"
        android:maxLength="30"
        android:fontFamily="@font/notosanscjkkr_light"
        android:gravity="left|top"
        android:textSize="15sp"
        android:textColor="#9c9c9c"/>
    <Button
        android:id="@+id/btn_alarm_comment_dialog_complete"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:includeFontPadding="false"
        android:background="@color/colorEssential"
        android:text="완료"
        android:fontFamily="@font/notosanscjkkr_medium"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:textColor="#ffffff"/>

</LinearLayout>