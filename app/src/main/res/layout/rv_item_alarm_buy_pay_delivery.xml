<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="66dp"
        android:orientation="vertical">
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">
        <View
                android:layout_width="78dp"
                android:layout_height="26dp"
                android:background="@drawable/alarm_date_style"/>

        <TextView
                android:id="@+id/tv_rv_item_alarm_buy_pay_delivery_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.03 (목)"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanscjkkr_demilight"
                android:textColor="#353d46"
                android:layout_centerInParent="true"
                android:textSize="14sp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alarm_item_style"
            android:layout_marginBottom="40dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제 미완료"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textSize="17sp"
                    android:textColor="#ff6f61"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입금을 기다리고 있어요!"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:textSize="15sp"
                    android:textColor="#333333"/>
            <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/iv_rv_item_alarm_buy_pay_delivery_product"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="3dp"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="21dp">
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="작품명"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/notosanscjkkr_regular"
                                android:textSize="15sp"
                                android:textColor="#777777"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"/>
                        <TextView
                                android:id="@+id/tv_rv_item_alarm_buy_pay_delivery_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="사랑"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/notosanscjkkr_regular"
                                android:textSize="15sp"
                                android:textColor="#353d46"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="작가"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/notosanscjkkr_regular"
                                android:textSize="15sp"
                                android:textColor="#777777"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"/>
                        <TextView
                                android:id="@+id/tv_rv_item_alarm_buy_pay_delivery_artist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="배선영"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/notosanscjkkr_regular"
                                android:textSize="15sp"
                                android:textColor="#353d46"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>

                    </RelativeLayout>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="배송방식"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/notosanscjkkr_regular"
                                android:textSize="15sp"
                                android:textColor="#777777"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="택배"
                                android:includeFontPadding="false"
                                android:fontFamily="@font/notosanscjkkr_regular"
                                android:textSize="15sp"
                                android:textColor="#353d46"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#eceff3"
                    android:layout_marginTop="13dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제 정보"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textSize="15sp"
                    android:textColor="#333333"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="8dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="금액"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:textSize="15sp"
                            android:textColor="#777777"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    <TextView
                            android:id="@+id/tv_rv_item_alarm_buy_pay_delivery_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1111111원"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:textSize="15sp"
                            android:textColor="#353d46"
                            android:layout_alignParentRight="true"
                            android:gravity="end"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="계좌"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:textSize="15sp"
                            android:textColor="#777777"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginBottom="13dp">
                    <TextView
                            android:id="@+id/tv_rv_item_alarm_buy_pay_delivery_bankAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="농협 20209903209 윤여진"
                            android:includeFontPadding="false"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:textSize="15sp"
                            android:textColor="#353d46"
                            android:layout_alignParentRight="true"
                            android:gravity="end"
                            android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>