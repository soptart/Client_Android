<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        tools:context=".Activity.FilterActivity" android:orientation="vertical">
    <LinearLayout
            android:id="@+id/ll_filter_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="22dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="필터"
                android:textColor="#353d46"
                android:fontFamily="@font/notosanscjkkr_bold"/>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/txt_filter_apply"
                    android:text="완료"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/notosanscjkkr_medium"
                    android:textColor="#9c9c9c"/>
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@id/ll_filter_title"
            android:layout_alignParentBottom="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical"
                android:layout_alignParentTop="true">

            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp">
                    <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="22dp">
                        <TextView
                                android:text="사이즈"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#4a4a4a"
                                android:layout_alignParentLeft="true"
                                android:fontFamily="@font/notosanscjkkr_medium"/>
                        <ImageView
                                android:id="@+id/img_filter_size_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="47dp"
                                android:src="@drawable/filter_all_gray_copy_3"/>
                    </RelativeLayout>
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/selector_filter_size_s"
                                    android:layout_marginRight="17dp"
                                    android:id="@+id/img_filter_size_s"/>
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/selector_filter_size_m"
                                    android:id="@+id/img_filter_size_m"/>
                        </LinearLayout>

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/selector_filter_size_l"
                                    android:layout_marginRight="17dp"
                                    android:id="@+id/img_filter_size_l"/>
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/selector_filter_size_xl"
                                    android:id="@+id/img_filter_size_xl"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                        android:layout_width="162dp"
                        android:layout_height="140dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/filter_size_all_no_select"/>

            </RelativeLayout>
            <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="형태"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textSize="16sp"
                        android:fontFamily="@font/notosanscjkkr_medium"
                        android:textColor="#4a4a4a"/>
                <ImageView
                        android:id="@+id/txt_filter_type_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/filter_all_gray"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                        android:id="@+id/img_filter_type_drawing"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                        android:id="@+id/img_filter_type_painting"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                        android:id="@+id/img_filter_type_oriental"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                        android:id="@+id/img_filter_type_mixing"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                        android:id="@+id/img_filter_type_crafting"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                        android:id="@+id/img_filter_type_digital"
                        android:layout_weight="1"/>
            </LinearLayout>


            <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="작품 카테고리"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:textSize="16sp" android:textColor="#4a4a4a"/>
                <TextView
                        android:text="전체"
                        android:id="@+id/txt_filter_category_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" android:textAlignment="textEnd" android:textColor="#ff6f61"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                        android:id="@+id/img_filter_category_human"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                        android:id="@+id/img_filter_category_animal"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                        android:id="@+id/img_filter_category_plant"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                        android:id="@+id/img_filter_category_object"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                        android:id="@+id/img_filter_category_abstract"
                        android:layout_weight="1"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                        android:id="@+id/img_filter_category_scenery"
                        android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
