<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="270dp"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical">

    <ImageView
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/card_prepare_character"
            android:layout_gravity="center_horizontal"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#111111"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="9sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="카드 결제 서비스\n준비 중 입니다 ㅠㅠ"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#4a4a4a"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="7sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="보다 나은 서비스 제공을 위하여\n노력하고있습니다.\n빠른 시일 내에 준비하겠습니다."/>

    <TextView
            android:id="@+id/card_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="확인"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:letterSpacing="-0.02"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_rect_red"/>

</LinearLayout>