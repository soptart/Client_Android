<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF"
              android:orientation="vertical"
              android:layout_marginTop="61dp"
              tools:context=".Activity.OtherUserPageActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_other_user_page_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김일혁"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:textSize="27sp"
                    android:textColor="#333333"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 님의"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:textSize="27sp"
                    android:textColor="#333333" />
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="작품 공간입니다."
                android:includeFontPadding="false"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:textSize="27sp"
                android:textColor="#333333" />

    </LinearLayout>

    <RelativeLayout
            android:id="@+id/rl_other_user_page_user_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_otherpage_user_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="124dp"
                android:layout_marginTop="10dp"
                android:gravity="top|left"
                android:maxLines="2"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:text="송창식을 좋아하는 경영학과 학생. 노-땅입니"
                android:textSize="16sp"/>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
            android:id="@+id/tl_top_navi_act_top_menu_other_user_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:tabIndicatorColor="@color/colorEssential"
            app:tabIndicatorHeight="4dp">
    </android.support.design.widget.TabLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eceff3"/>

    <android.support.v4.view.ViewPager
            android:id="@+id/vp_top_navi_act_frag_pager_other_user_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tl_top_navi_act_top_menu_other_user_page"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#FFFFFF" />

</LinearLayout>