<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".Activity.ExhibitionDetailActivity"
              android:paddingTop="10dp"
              android:paddingBottom="10dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="end"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/btn_exhibition_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="30dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전시 퇴장"
                    android:textColor="#353d46"
                    android:textSize="15sp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:layout_marginRight="10dp"/>

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/exhibition_exit"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
            android:id="@+id/iv_detail_ex_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_ex_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/txt_ex_current_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="4"
                android:textSize="16sp"
                android:textColor="#ffffff"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="/"
                android:textSize="16sp"
                android:textColor="#ffffff"/>

        <TextView

                android:id="@+id/txt_ex_all_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textSize="16sp"
                android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>
