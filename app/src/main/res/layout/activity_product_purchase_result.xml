<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.ProductPurchaseResultActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/purchase_complete_receipt"
            android:id="@+id/linearLayout"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_viewmore_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/purchase_artoo_logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="40dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2일 이내로 입금해주세요!\n기간 내 미입금시 구매가 취소됩니다."
                android:textSize="17sp"
                android:textColor="#333333"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="9sp"
                android:layout_marginBottom="40dp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#777777"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="17sp"
                    android:text="작품명"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"/>

            <TextView
                    android:id="@+id/result_artwork_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="17sp"
                    android:gravity="end"
                    tools:text="밤, 별빛"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#777777"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="17sp"
                    android:text="가격"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"/>

            <TextView
                    android:id="@+id/result_artwork_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="17sp"
                    android:gravity="end"
                    tools:text="밤, 별빛"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/result_key1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#777777"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="17sp"
                    android:text="이름"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"/>

            <TextView
                    android:id="@+id/result_value1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="17sp"
                    android:gravity="end"
                    tools:text="밤, 별빛"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/result_key2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#777777"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="17sp"
                    android:text="이름"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"/>

            <TextView
                    android:id="@+id/result_value2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="17sp"
                    android:gravity="end"
                    tools:text="밤, 별빛"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/result_key3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#777777"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="17sp"
                    android:text="이름"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"/>

            <TextView
                    android:id="@+id/result_value3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="17sp"
                    android:gravity="end"
                    tools:text="밤, 별빛"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    />
        </RelativeLayout>

    </LinearLayout>

    <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="16sp"
            android:gravity="center_horizontal"
            android:text="더 구경할래요!"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/button_rect_red"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txt_checkpurchaselist"
            android:layout_marginBottom="24dp"
            android:id="@+id/txt_viewmore_btn"/>

    <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:letterSpacing="-0.02"
            android:lineSpacingExtra="16sp"
            android:gravity="center_horizontal"
            android:text="구매내역 확인하기"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/button_rect_red"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/txt_checkpurchaselist"/>

</android.support.constraint.ConstraintLayout>