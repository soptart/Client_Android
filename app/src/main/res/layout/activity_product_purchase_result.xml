<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f4f4f4"
        android:orientation="vertical"
        tools:context=".Activity.ProductPurchaseResultActivity">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/purchase_complete_receipt"
            android:layout_gravity="center"
            android:layout_marginTop="91dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/purchase_artoo_logo"
                android:layout_marginLeft="131dp"
                android:layout_marginTop="36dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2일 이내로 입금해주세요!"
                android:gravity="center_horizontal"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textSize="17sp"
                android:textColor="#333333"
                android:layout_marginTop="14dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기간 내 미입금시 구매가 취소됩니다."
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:textSize="17sp"
                android:textColor="#333333"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="32dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:layout_marginHorizontal="25dp"
                android:paddingVertical="15dp"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/notosanscjkkr_demilight"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="#777777"
                        android:text="작품명"/>
                <TextView
                        android:id="@+id/tv_product_purchase_result_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:text="밤,별빛"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:gravity="end"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/notosanscjkkr_demilight"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="#777777"
                        android:text="가격"/>

                <TextView
                        android:id="@+id/tv_product_purchase_result_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:text="60,500원"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:gravity="end"/>
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:layout_marginHorizontal="25dp"
                android:paddingTop="15dp"
                android:paddingBottom="40dp"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/notosanscjkkr_demilight"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="#777777"
                        android:text="이름"/>
                <TextView
                        android:id="@+id/tv_product_purchase_result_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:text="김정음"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:gravity="end"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/notosanscjkkr_demilight"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="#777777"
                        android:text="전화번호"/>
                <TextView
                        android:id="@+id/tv_product_purchase_result_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="010-3395-4040"
                        android:textColor="#333333"
                        android:gravity="end"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/notosanscjkkr_demilight"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="#777777"
                        android:text="계좌번호"/>

                <TextView
                        android:id="@+id/tv_product_purchase_result_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        android:text="농협 8849829092"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:gravity="end"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
            android:layout_width="261dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_rect_red">
        <TextView
                android:id="@+id/tv_product_purchase_result_viewmore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:text="더 구경할래요!"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="261dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rect_red">
        <TextView
                android:id="@+id/tv_product_purchase_result_checkpurchaselist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#ffffff"
                android:text="구매내역 확인하기"
                android:fontFamily="@font/notosanscjkkr_medium"
                android:includeFontPadding="false"
                android:layout_centerInParent="true"
                android:background="@drawable/button_rect_red"/>
    </RelativeLayout>
</LinearLayout>