<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_home_theme_theme_category_0"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/theme_happy"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/iv_home_theme_theme_category_1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/theme_sesitive"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/iv_home_theme_theme_category_2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/theme_fancy"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/iv_home_theme_theme_category_3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/theme_cute"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/iv_home_theme_theme_category_4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/theme_simple"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/iv_home_theme_theme_category_5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/theme_unfathomable"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/iv_home_theme_theme_category_6"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/theme_spring"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/iv_home_theme_theme_category_7"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/theme_summer"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/iv_home_theme_theme_category_8"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/theme_fall"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/iv_home_theme_theme_category_9"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginHorizontal="6dp"
                android:src="@drawable/theme_winter"
                android:adjustViewBounds="true"/>
        </LinearLayout>
    </HorizontalScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_home_theme_recommend_background"
                    android:src="@drawable/home_theme_blur_happy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:cropToPadding="false"
                    android:adjustViewBounds="false"/>
                <LinearLayout
                    android:paddingTop="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_home_theme_background">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/theme_recommend"
                        android:id="@+id/img_home_theme_recommend_sticker"
                        />
                    <LinearLayout
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="우리집에 행복을 가져다주는 작품들"
                            android:includeFontPadding="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txt_home_theme_recommend_title"
                            android:fontFamily="@font/notosanscjkkr_regular"
                            android:layout_marginTop="8dp"
                            android:textSize="17sp"
                            android:textColor="#ffffff"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp">
                            <ImageView
                                android:id="@+id/iv_home_theme_recommend_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/theme_all"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>

                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rv_home_theme_recommend_product"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:clipToPadding="false"/>
                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/iv_home_theme_theme_title_1"
                    android:src="@drawable/theme_picture_sensitive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/iv_home_theme_theme_title_2"
                    android:src="@drawable/theme_picture_fancy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/iv_home_theme_theme_title_3"
                    android:src="@drawable/theme_picture_cute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/iv_home_theme_theme_title_4"
                    android:src="@drawable/theme_picture_simple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/iv_home_theme_theme_title_5"
                    android:src="@drawable/theme_picture_unfathomable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/iv_home_theme_theme_title_6"
                    android:src="@drawable/theme_picture_spring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/iv_home_theme_theme_title_7"
                    android:src="@drawable/theme_picture_summer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/iv_home_theme_theme_title_8"
                    android:src="@drawable/theme_picture_fall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center_horizontal"
                app:cardUseCompatPadding="false"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/iv_home_theme_theme_title_9"
                    android:src="@drawable/theme_picture_winter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>