<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <ImageView
                    android:id="@+id/img_home_theme_theme_category_0"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/img_home_theme_theme_category_1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/img_home_theme_theme_category_2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/img_home_theme_theme_category_3"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/img_home_theme_theme_category_4"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/img_home_theme_theme_category_5"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/img_home_theme_theme_category_6"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/img_home_theme_theme_category_7"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/img_home_theme_theme_category_8"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"/>
            <ImageView
                    android:id="@+id/img_home_theme_theme_category_9"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="5dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"/>
        </LinearLayout>
    </HorizontalScrollView>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/img_home_theme_recommend_background"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_launcher_background"
                        android:scaleType="center" android:cropToPadding="false" android:adjustViewBounds="false"/>
                <LinearLayout
                        android:paddingVertical="20dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/ll_home_theme_background">
                    <ImageView
                            android:layout_marginHorizontal="20dp"
                            android:layout_width="47dp"
                            android:layout_height="22dp" app:srcCompat="@mipmap/ic_launcher"
                            android:id="@+id/img_home_theme_recommend_sticker"/>
                    <LinearLayout
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="거실에 걸어두면 느낌 있는 그림들"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/txt_home_theme_recommend_title"
                                android:textSize="17sp" android:textColor="#FFFFFF"/>
                        <TextView
                                android:text="All"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/txt_home_theme_recommend_all"
                                android:layout_weight="1"
                                android:textAlignment="textEnd" android:textSize="19sp" android:textColor="#FF6F61"/>
                    </LinearLayout>
                    <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:id="@+id/rv_home_theme_recommend_product"
                            android:orientation="horizontal"/>
                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:cardCornerRadius="5dp"
                                                app:cardUseCompatPadding="true">
                <ImageView
                        android:id="@+id/img_home_theme_theme_title_0"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:cardCornerRadius="5dp"
                                                app:cardUseCompatPadding="true">
                <ImageView
                        android:id="@+id/img_home_theme_theme_title_1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:cardCornerRadius="5dp"
                                                app:cardUseCompatPadding="true">
                <ImageView
                        android:id="@+id/img_home_theme_theme_title_2"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:cardCornerRadius="5dp"
                                                app:cardUseCompatPadding="true">
                <ImageView
                        android:id="@+id/img_home_theme_theme_title_3"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:cardCornerRadius="5dp"
                                                app:cardUseCompatPadding="true">
                <ImageView
                        android:id="@+id/img_home_theme_theme_title_4"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:cardCornerRadius="5dp"
                                                app:cardUseCompatPadding="true">
                <ImageView
                        android:id="@+id/img_home_theme_theme_title_5"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:cardCornerRadius="5dp"
                                                app:cardUseCompatPadding="true">
                <ImageView
                        android:id="@+id/img_home_theme_theme_title_6"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:cardCornerRadius="5dp"
                                                app:cardUseCompatPadding="true">
                <ImageView
                        android:id="@+id/img_home_theme_theme_title_7"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:cardCornerRadius="5dp"
                                                app:cardUseCompatPadding="true">
                <ImageView
                        android:id="@+id/img_home_theme_theme_title_8"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>